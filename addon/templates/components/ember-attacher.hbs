{{#ember-popper eventsEnabled=false
                modifiers=_modifiers
                placement=placement
                class=popperClass
                popperContainer=popperContainer
                renderInPlace=renderInPlace
                target=target as |emberPopper|}}
  {{#ember-attacher-inner animation=animation
                          arrow=arrow
                          class="inner"
                          disableEventListeners=emberPopper.disableEventListeners
                          enableEventListeners=emberPopper.enableEventListeners
                          hideDelay=hideDelay
                          hideDuration=hideDuration
                          hideOn=hideOn
                          interactive=interactive
                          isOffset=isOffset
                          isShown=isShown
                          placement=placement
                          renderInPlace=renderInPlace
                          scheduleUpdate=emberPopper.scheduleUpdate
                          showDelay=showDelay
                          showDuration=showDuration
                          showOn=showOn
                          target=target as |inner|}}
    {{yield (hash
      emberPopper=emberPopper
      hide=inner.hide
    )}}
  {{/ember-attacher-inner}}
{{/ember-popper}}
