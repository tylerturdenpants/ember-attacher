{{#ember-popper options=_options
                popperClass=popperClass
                popperContainer=popperContainer
                renderInPlace=renderInPlace
                target=target as |emberPopper|}}
  {{#ember-attacher-inner animation=animation
                          arrow=arrow
                          class="inner"
                          hideDelay=hideDelay
                          hideDuration=hideDuration
                          hideOn=hideOn
                          interactive=interactive
                          placement=placement
                          popper=emberPopper.popper
                          popperElement=emberPopper.popperElement
                          renderInPlace=renderInPlace
                          showDelay=showDelay
                          showDuration=showDuration
                          showOn=showOn
                          target=emberPopper.popperTarget as |inner|}}
    {{yield (hash
      emberPopper=emberPopper
      hide=inner.hide
    )}}
  {{/ember-attacher-inner}}
{{/ember-popper}}
